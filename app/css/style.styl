body
	@extend .type--main
	font-family $font
	color black
	line-height 1.4

.main-cont
	center(1630px,20px)
.main-cont--md
	center(1370px,20px)
.main-cont--sm
	center(900px,20px)

.page
	f()
	fl()
	min-height 100vh

.content
	flex-grow 1

.content--mid
	flex(mid)

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 10
// animate top menu === end


.scroll-template-light
	+above(1025px)
		&::-webkit-scrollbar
			-webkit-appearance: none
			width: 4px
			height: 8px
			background: #f8f8f8
			border-radius: 4px
		&::-webkit-scrollbar-thumb
			border-radius: 4px
			background: $border-color


// error
.page-error
	flex(mid)
	fl()
	height: 100%
.page-error__title
	@extend .type--xl
	margin-bottom: 30px
	font-weight: 700
	color $gray
.page-error__img
	margin-bottom: 30px
.page-error__text
	@extend .type--md
	color $gray
	margin-bottom: 30px
.page-error__get
	@extend .btn--md
	@extend .btn--mark
// error === end

// modal
.modal-layer
	width: 100%
	height: 100vh
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all .8s // duration for fade
	opacity 0
	&.active
		visibility: visible
		opacity 1
		transition all .4s // duration for fade

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: #18191da1
	width: 100%
	height: 100vh
	min-height 100vh

.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

.modal
	+below(640px)
		width: 100%
		box-shadow 0 0 0
	transform scale(.9) translateZ(0) translate3d(0, 0, 0)
	will-change: transform, opacity;
	backface-visibility: hidden
	position: absolute
	opacity 0
	transition transform .6s, opacity .4s
	max-width 468px
	left -9999px
	top -9999px
	&.active
		max-height 100%
		opacity 1
		transform scale(1) translateZ(0) translate3d(0, 0, 0)
		position: relative
		z-index 1000
		left initial
		top initial
		will-change: transform, opacity
	&.modal-hide-animation
		transform scale(.9)
		opacity 0
		transition transform .6s, opacity .8s


.modal-content
	+below(640px)
		height: 100%
		padding: 20px
		overflow-y scroll
		width: 95%!important
	margin: 20px auto
	background: white
	position: relative
	padding: 40px 50px 50px 50px
	br(10px)

.modal-close
	+below(768px)
		top 12px
		right 12px
	position: absolute
	top: 16px
	right: 16px
	cp()
	flex(mid)
	z-index 10
	&:hover
		.icon
			opacity: 1
	.icon
		tr()
		size 20px
		fill black
		opacity:.3
// modal === end

// slider menu
// slider menu
.head-toggle
	+above(1023px)
		display: none
	+below(1024px)
		size 60px
	flex(mid)
	cp()
	size 80px
	margin-right: -20px
	.icon
		+below(640px)
			size 20px
		size 25px
		fill black
	.icon-close
		display: none

.head-toggle.slide-block-toggle--open
	.icon-close
		display: block
	.icon-open
		display: none

.slide-block
	+below(768px)
		padding: 30px 40px
	position: fixed
	top 60px // Высота шапки
	width: 100%
	tr(all)
	height: calc(100% - 60px) // Высота шапки
	z-index 100
	background: white
	padding: 30px
	overflow auto
	border-top 1px solid $border-color
.slide-block--left
	left 0
	transform translateX(-100%)

.slide-block--right
	right 0
	transform translateX(100%)

.slide-block--open
	transform translateX(0%)

.slide-nav__el
	+below(640px)
		padding: 22px
	padding: 22px 0
	font-weight: 500
	color black
	display block
	@extend .type--md

// slider menu === end


// header
.header-wrap
	background: white
	box-shadow: 0px 4px 8px rgba(102, 130, 185, 0.12);

.header
	+below(1200px)
		height: 60px
	height: 100px
	flex(between)

.logo
	+below(640px)
		width: 160px
	width: 200px

.header-nav
	+below(1023px)
		display none
	flex(between)
	width: 55%
	margin-left auto

.header-nav__el
	+below(1024px)
		font-size: 16px
	@extend .link
	font-weight: 700
// header === end

// main-banner
.main-banner-wrap
	background: $green
	overflow: hidden
.main-banner
	+below(1200px)
		height calc(100vh - 60px)
	+below(768px)
		fl()
	height calc(100vh - 100px)
	f()
	justify-content space-between

.main-banner__info
	+below(768px)
		flex(mid)
		fl()
		max-width 480px
		margin-left auto
		margin-right auto

.main-banner__img
	+below(1300px)
