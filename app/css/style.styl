		size 20px
.soc-row--monochrome
	.soc-row__el
		background: rgba(255,255,255,0.1)
		&:hover
			background: rgba(255,255,255,0.2)
		.icon
			fill white
// soc-row === end

// footer
.footer-wrap
	background: black
	a
		&:hover
			color $mark
	padding: 40px 0
.footer
	+below(720px)
		fl()
	flex(between)
.footer-logo
	+below(1280px)
		margin-right: 20px
	+below(768px)
		width: 200px
	+below(720px)
