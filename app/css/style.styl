	+below(768px)
		width: 100%
		flex(mid)
	width: 48%
	f()
	align-items: flex-end
.main-banner__img-el
	+below(1300px)
		padding: 65%
		background-position:40% center
	+below(768px)
		background-size contain
		width: 100%
		background-position:center
		padding: 40%
	bg-full()
	width: 100%
	padding: 44%
.main-banner__cont
	+below(1300px)
		width: 60%
	+below(768px)
		width: 100%
	+below(480px)
		flex-grow 1
		margin-bottom: -10%
	width: 48%
	color white
	f()
	justify-content center
	fl()

.main-banner-subTitle
	+below(768px)
		text-align center
		margin-top: 30px
	+below(640px)
		font-size: 16px
.main-banner-title
	+below(768px)
		text-align center
	+below(640px)
		font-size: 24px

// main-banner === end
.advant-el
	+below(480px)
		f()
	.icon
		+below(1024px)
			size 70px
		+below(480px)
			size 48px
			min-width 48px
			margin-right: 20px
			margin-bottom: 0
		size 100px
		margin-bottom: 24px

.advant-el__text
	+below(480px)
		font-size: 12px
		line-height: 1.6

.banner-preview__img
	f()
.extendUp-img-wrap
	f()
	align-items: flex-end
	justify-content center
.extendUp-img
	+below(1024px)
		margin: 40px 40px 0 0
	+below(768px)
		margin-top: 0
		max-width 400px
		padding: 0 20px
	+below(640px)
		max-width: 100%
	margin: -5% 0 0 0

.banner-preview
	+below(1024px)
		fl()
	f()
	background: white
	br(20px)
	overflow: hidden
.banner-preview__img
	+below(1024px)
		width: 100%
		padding: 5%
	width: 50%
	bg-full()
	flex(mid)
	img
		max-width 540px
		width: 75%

.banner-preview__info
	+below(1024px)
		width: 100%
	+below(768px)
		padding: 60px
	+below(640px)
		padding: 20px
	width: 50%
	padding: 90px

// config
.config
	height: 0
	overflow: hidden
	opacity: 0.2
	transition opacity .8s, transform .8s
	transform: scale(.95, .95)
	+below(1024px)
		margin-left: -20px
		margin-right: -20px
	&.active
		transform: scale(1, 1)
		opacity: 1
		height: auto

.config-nav
	+below(640px)
		overflow: auto
		margin-left: -20px
		margin-right: -20px
		padding-bottom: 10px
		justify-content: flex-start
	flex(mid)
	
.config-nav__el
	+below(640px)
		margin-right: 20px
	flex(mid)
	br(8px)
	box-shadow: 0px 4px 8px rgba(102, 130, 185, 0.12)
	border 1px solid transparent
	padding: 18px 36px
	margin-right: 40px
	cp()
	transition color .4s
	white-space nowrap
	&:last-child
		margin-right: 0
	&:hover
		color $mark
		.icon
			fill $mark
	.icon
		size 42px
		margin-right: 16px
		tr()
	&.active
		box-shadow 0 0 0
		border 1px solid $mark
		color $mark
		.icon
			fill $mark

.config-content
	+below(1024px)
		padding: 0 20px 20px 20px
.config-info
	width: 100%

.config-preview-nav
	+below(1024px)
		display none

.config-preview-nav__el
	bg-full()
	br(8px)
	padding: 40%
	margin-bottom: 12px
	cp()
	tr()
	&:last-child
		margin-bottom: 0
	&:hover
		opacity: .6
	&.active
		opacity: .6
.config-slider__el-wrap
	+below(1024px)
		bsh()
		transform: scale(1,1)
		br(20px)
		overflow: hidden
	transform: scale(.95, .95)
.config-slider
	.slick-active
		.config-slider__el-wrap
			transition transform .4s ease-in-out
			transform: scale(1, 1);
	.slick-slide
		+below(1024px)
			margin: 16px
		+below(480px)
			margin: 8px
	.slick-list
		+below(1024px)
			margin: 0 -16px 0 0
		+below(480px)
			margin: 0 -8px 0 0
.config-slider__el
	+below(1024px)
		border-radius 20px 20px 0 0
	bg-full()
	padding: 45% 10%
	br(20px)

// config === end


.title
	position relative
	z-index 5
.title__shadow
	+below(1024px)
		font-size: 64px
		bottom 10%
	+below(640px)
		font-size: 38px
		bottom 20%
	position absolute
	left 0
	bottom 0
	font-size: 100px
	text-align center
	width: 100%
	color #E0E3ED
	z-index -1

.work-el
	+below(768px)
		padding: 20px
	padding: 40px
	f()
	align-items center
	fl()
	text-align center
	.icon
		size 100px
		margin-bottom: 16px

.work-el-title
	z-index 5

.brush
	position absolute
	bg-full()
	background-size contain
	width: 100%
	padding: 5%
	top: -10%
	z-index -1

// review slider
.review-slider
	.slick-slide
		+below(1024px)
			margin: 0 8px
		margin: 0 14px
	.slick-list
		+below(1024px)
			margin: 0 -8px
		margin: 0 -14px
//.review-slider__el
.review-slider__el-img
	bg-full()
	padding: 50% 10%
	br(8px)

.review-slider-wrap
	padding: 16px 0 16px 0
	position relative
	&:before
		content ''
		position absolute
		width: 100%
		height: 100px
		bottom 15px
		left 0
		background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #FFFFFF 100%);

.review-slider-content
	height 270px
	overflow auto
	padding-right: 16px
.review-slider-text
	padding:0 0 60px 0

// review slider === end


// accordion
.accordion
	+below(640px)
		width 100%

	opacity: 0
	left -9999px
	visibility: hidden
	position absolute
	transform translateX(10px)
	transition opacity 1.2s, transform .8s
	&.active
		transform translateX(0px)
		visibility: visible
		opacity: 1
		left initial
		position: static
.accordion__el
	border 1px solid #e5e5e5
	margin-top: -1px
	background: white
	cp()
	&:hover
		.accordion__el-head-icon
			&:before
				content ''
				background: $green
			&:after
				content ''
				background: $green
	&:first-child
		border-radius 10px 10px 0 0
	&:last-child
		border-radius  0 0 10px 10px
.accordion__el-head
	+below(640px)
		padding: 20px
	padding: 30px 40px
	flex(between)
	color black
	&.active
		.accordion__el-head-text
			color $green
		.accordion__el-head-icon
			&:after
				content ''
				transform rotate(45deg)
			&:before
				content ''
				transform rotate(45deg)
.accordion__el-head-text
	+below(640px)
		line-height: 1.6
	@extend .type--md
	width: 80%
	font-weight: 700

.accordion__el-head-icon
	+below(640px)
		size 16px
	position: relative
	size 24px
	&:before
		content ''
		tr(all)
		height: 2px
		width: 100%
		background: black
		position: absolute
		top calc(50% - 1px)
	&:after
		content ''
		tr(all)
		height: 100%
		width: 2px
		background: black
		position: absolute
		left calc(50% - 1px)

.accordion__el-content
	+below(640px)
		padding:0 20px 20px 20px
	padding: 0 40px 40px 40px
	display: none
	p
		color $typePrimary
		&:first-child
			margin-top: 0
		&:last-child
			margin-bottom: 0


// accordion === end

// delivery
