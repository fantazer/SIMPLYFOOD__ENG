	min-width 64px
	round()
	flex(mid)
	background: #ffffff1a
	cp()
	tr()
	margin-left: 2%
	&:hover
		background: #ffffff26
		.icon
			transform translateY(-3px)
	.icon
		transform translateY(0)
		tr()
		fill white
		size 20px
.soc-row--footer
	+below(720px)
