@import '../variable/config/_config.styl'

calcExtend(nameExtend,size1,size2,size3)
	{nameExtend} (size1 px)
	if size2
		+below(1024px)
			{nameExtend} (size2 px)
	if size3
		+below(640px)
			{nameExtend} (size3 px)

$listSize = ("margin" m),\
						("margin-top" mt),\
						("margin-right" mr),\
						("margin-bottom" mb),\
						("margin-left" ml),\
						("padding" p),\
						("padding-top" pt),\
						("padding-right" pr),\
						("padding-bottom" pb),\
						("padding-left" pl)

for listSizeItem in $listSize
	for listItem in $listExtend
		.{listSizeItem[1]}-{listItem[0]}
			calcExtend(listSizeItem[0],listItem[0],listItem[1],listItem[2])

